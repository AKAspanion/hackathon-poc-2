# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=supply_chain

# ── LLM Provider ──────────────────────────────────────────────────────
# Options: anthropic | openai | ollama
# The system tries the configured provider first, then falls back to any
# available credential, and finally uses rule-based mock output.
LLM_PROVIDER=anthropic

# Anthropic (when LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI (when LLM_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
# Optional: override the API base URL (e.g. for a self-hosted OpenAI-compatible proxy)
# OPENAI_BASE_URL=http://your-proxy-host/v1

# Ollama (when LLM_PROVIDER=ollama — requires local Ollama running)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# ── External API Keys ─────────────────────────────────────────────────
WEATHER_API_KEY=your_openweather_api_key_here
# NewsAPI key for live trend/news fetching (https://newsapi.org/)
# If not set, the trend agent uses rich built-in mock articles.
NEWS_API_KEY=your_newsapi_key_here

# JWT (email-only OEM login)
JWT_SECRET=your_jwt_secret_change_in_production

# ── Trend Insights Agent ──────────────────────────────────────────────
# Set to false to disable the background scheduler job for trend insights.
TREND_AGENT_ENABLED=true
# How often (in minutes) the trend-insights scheduler job runs.
TREND_AGENT_INTERVAL_MINUTES=60
# Absolute path to the Excel input file. Leave blank to use the bundled demo.
# TREND_AGENT_EXCEL_PATH=/path/to/your/suppliers.xlsx

# ── Application ───────────────────────────────────────────────────────
PORT=8000
ENV=development
FRONTEND_URL=http://localhost:3000
